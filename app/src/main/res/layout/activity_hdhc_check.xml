                android:layout_height="1px"
                android:background="#D9D9D9" />

            <!--文字描述-->
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:text="文字描述"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_bz"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_banner_height"
                    android:background="@drawable/jubao_yuanjiao"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:hint="为了更有效的帮助整改,请详细描述问题..."
                    android:padding="@dimen/margin_size_common"
                    android:textColor="#636363"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
            <!--上传图片-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:background="#fff"
                    android:text="  上传图片凭证 /最多上传9张图片"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.example.lcsrq.view.BaseGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:padding="@dimen/margin_size_common"
                    android:verticalSpacing="5dp" />
            </LinearLayout>
            <!--地址-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/locationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_size_common">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/locationTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_mini"
                    android:text="所在的位置"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

