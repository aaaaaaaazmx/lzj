<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <RelativeLayout
        android:id="@+id/rl_lx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="查询类型:"
            android:textColor="#5F5F5F"
            android:textSize="15sp" />

        <TextView
            android:textSize="15sp"
            android:hint="车牌"
            android:id="@+id/tv_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#DDDDDD" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icom_xlx" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="车牌号码 :"
            android:textColor="#5F5F5F"
            android:textSize="15sp" />

        <EditText
            android:textSize="15sp"
            android:hint="请输入.."
            android:id="@+id/et_text_input"
            android:background="@color/white"
            android:cursorVisible="false"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#DDDDDD" />
        <EditText
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_input"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="请输入.."
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:id="@+id/rl_sfz"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_sfz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="身份证:"
            android:textColor="#5F5F5F"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_sfz"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="请输入.."
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="15sp" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="43052119994120808"-->
            <!--android:textColor="#DDDDDD" />-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="电话号码:"
            android:textColor="#5F5F5F"
            android:textSize="15sp" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="18975766666"-->
            <!--android:textColor="#DDDDDD" />-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="请输入.."
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9D9D9" />

    <Button
        android:id="@+id/btn_check"
        android:textSize="20sp"
        android:textColor="#3B84AB"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_style"
        android:text="查询" />

</LinearLayout>
