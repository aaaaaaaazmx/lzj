<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>
    <ScrollView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F2F2F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--车牌信息-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="车牌 : "  />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_cp"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="湘A-13154"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--驾驶员-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="驾驶员 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_jsy"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="杨某某" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--计分情况-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="记分情况 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_jf"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="-12分" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />


                <!--押运员-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="押运员 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_yyy"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="-12分" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--司机电话-->
                <RelativeLayout
                    android:id="@+id/rl_siji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="司机电话 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_sj_number"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="18975766666" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--道路运输证明-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="道路运输证 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_dl"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="18975766666" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--禁区运输证-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="禁区运输证 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_jq"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="18975766666" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

                <!--公司-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/car_detail"
                        android:layout_marginLeft="15dp"
                        android:text="公司 : " />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/tv_company"
                        style="@style/car_detail_num"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="18975766666" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="#F2F2F2" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2" />

            <com.example.lcsrq.view.ExpandableListViewDY
                android:id="@+id/gyz_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.lcsrq.view.ExpandableListViewDY>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2" />

            <com.example.lcsrq.view.ExpandableListViewDY
                android:dividerHeight="0dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:id="@+id/kf_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.example.lcsrq.view.ExpandableListViewDY>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F2F2F2" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
