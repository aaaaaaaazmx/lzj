<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginLeft="5dp"
                android:id="@+id/user_avator"
                android:layout_width="80dp"
                android:layout_height="80dp"
                fresco:failureImage="@mipmap/head"
                android:layout_centerVertical="true"
                fresco:actualImageScaleType="focusCrop"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="180dp" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杨某某" />

                <TextView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="翡翠会员供气站"
                    android:textColor="#C0C0C0" />
                <TextView
                    android:id="@+id/tv_bianhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号:355"
                    android:textColor="#a000" />
            </LinearLayout>

            <!--android:background="#DCDCDC"-->


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:layout_width="1dip"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:background="#D8D8D8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖南力美天下有限公司" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />


    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50分"
                android:textColor="#50B483"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="学习积分"
                android:textColor="#818181"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_jfqk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="524分"
                android:textColor="#18719F"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="计分情况"
                android:textColor="#818181"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            style="@style/car_detail"
            android:layout_marginLeft="15dp"
            android:text="公司名称" />

        <TextView
            android:id="@+id/tv_company"
            style="@style/car_detail"
            android:layout_marginRight="15dp"
            android:text="43052119941208473111" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            style="@style/car_detail"
            android:layout_marginLeft="15dp"
            android:text="身份证号码" />

        <TextView
            android:id="@+id/tv_code"
            style="@style/car_detail"
           
            android:layout_marginRight="15dp"
            android:text="43052119941208473111" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            style="@style/car_detail"
            android:layout_marginLeft="15dp"
            android:text="联系电话号码" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/car_detail"
           
            android:layout_marginRight="15dp"
            android:text="43052119941208473111" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            style="@style/car_detail"
            android:layout_marginLeft="15dp"
            android:text="技能证书编号" />

        <TextView
            android:id="@+id/tv_jineng"
            style="@style/car_detail"
           
            android:layout_marginRight="15dp"
            android:text="43052119941208473111" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            style="@style/car_detail"
            android:layout_marginLeft="15dp"
            android:text="技能证书有效期" />

        <TextView
            android:id="@+id/tv_youxiaoqi"
            style="@style/car_detail"
            android:layout_marginRight="16dp"
            android:text="43052119941208473111"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

</LinearLayout>
