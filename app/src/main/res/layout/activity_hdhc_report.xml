<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_jbr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="举报人 : "
                    android:textSize="15sp" />

                <!--<EditText-->
                <!--android:textSize="15sp"-->
                <!--android:id="@+id/et_chr"-->
                <!--android:hint="请输入车牌号"-->
                <!--android:cursorVisible="false"-->
                <!--android:background="@color/white"-->
                <!--android:textColorHint="@color/hint_text_color"-->
                <!--android:textCursorDrawable="@drawable/edittext_cursor"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="#636363"-->
                <!--android:layout_alignTop="@+id/imageView"-->
                <!--android:layout_centerHorizontal="true" />-->
                <EditText
                    android:id="@+id/et_chr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_jbr"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入查处人.."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_xl"
                    android:id="@+id/imageView" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D9D9D9" />

            <RelativeLayout
                android:id="@+id/rl_leixing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="举报类型 : "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/et_leixing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_leixing"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_xl" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D9D9D9" />

            <RelativeLayout
                android:id="@+id/rl_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_cph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="车牌号 : "
                    android:textSize="15sp" />

                <EditText
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:id="@+id/et_carnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_cph"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入车牌号.."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_xl" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D9D9D9" />


            <RelativeLayout
                android:id="@+id/rl_diqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_diqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="举报地区 : "
                    android:textSize="15sp" />

                <TextView
                    android:hint="请选择举报地区.."
                    android:id="@+id/et_diqu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_diqu"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_xiala"
                    android:layout_width="13dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icom_xlx" />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D9D9D9" />


            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="详细地址 : "
                    android:textSize="15sp" />

                <!--<EditText-->
                <!--android:textSize="15sp"-->
                <!--android:id="@+id/et_dizhi"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@color/white"-->
                <!--android:cursorVisible="false"-->
                <!--android:hint="请输入地址"-->
                <!--android:textColor="#636363"-->
                <!--android:textColorHint="@color/hint_text_color"-->
                <!--android:textCursorDrawable="@drawable/edittext_cursor" />-->
                <EditText
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_dizhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_dizhi"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请选择地址..."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_dingwei"
                    android:layout_width="13dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_dw" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D9D9D9" />



            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_qxjd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_quxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="区县/街道 : "
                    android:textSize="15sp" />

                <!--<EditText-->
                <!--android:textSize="15sp"-->
                <!--android:id="@+id/et_address"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@color/white"-->
                <!--android:cursorVisible="false"-->
                <!--android:hint="请输入街道"-->
                <!--android:textColor="#636363"-->
                <!--android:textColorHint="@color/hint_text_color"-->
                <!--android:textCursorDrawable="@drawable/edittext_cursor" />-->
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_quxian"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入地址.."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_text_color"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_xl" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#D9D9D9" />

            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:text="文字描述"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/postedContentEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_banner_height"
                android:background="@drawable/jubao_yuanjiao"
                android:cursorVisible="true"
                android:gravity="top"
                android:hint="为了更有效的帮助整改,请详细描述问题..."
                android:padding="@dimen/margin_size_common"
                android:textColor="#636363"
                android:textColorHint="@color/hint_text_color"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:background="#fff"
                    android:text="  上传图片凭证 /最多上传9张图片"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <com.example.lcsrq.view.BaseGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:padding="@dimen/margin_size_common"
                android:verticalSpacing="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_normal"
                    android:layout_marginLeft="@dimen/margin_size_common"
                    android:layout_marginRight="@dimen/margin_size_common"
                    android:background="@color/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/locationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_size_common">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/locationTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_mini"
                    android:text="所在的位置"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Button
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/btn_submit"
                android:textColor="#4F91B3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_style"
                android:padding="10dip"
                android:text="提交举报" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>