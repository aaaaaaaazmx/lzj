<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:visibility="gone"
        android:id="@+id/oneImgIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_size_common"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_pic_fail"
        fresco:placeholderImageScaleType="centerCrop"
        android:layout_marginBottom="7dp"
        />

    <LinearLayout
        android:id="@+id/morePicLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgIv9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_pic_fail"
                fresco:placeholderImageScaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/ll_root"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <TextView
                android:textSize="15sp"
                android:textColor="#333333"
                android:id="@+id/tv_jcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查处人" />


            <TextView
                android:visibility="gone"
                android:singleLine="true"
                android:maxEms="18"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#BABABA"
                android:id="@+id/tv_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号" />

            <TextView
                android:textSize="12sp"
                android:textColor="#808080"
                android:id="@+id/tv_creat_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查时间" />

            <TextView
                android:textSize="12sp"
                android:textColor="#808080"
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查单位" />

        </LinearLayout>


        <!--<ImageView-->
        <!--android:id="@+id/img_dw"-->
        <!--android:background="@null"-->
        <!--android:src="@mipmap/icon_dw"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="15dp"-->
        <!--android:layout_height="24dp" />-->

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_go"
            android:textColor="#78C6A0"
            android:layout_marginRight="20dp"
            android:drawableRight="@mipmap/icon_dh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="去这里"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="1px"
        android:background="#D9D9D9" />


</LinearLayout>
