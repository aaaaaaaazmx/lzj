<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_common_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="#19709D">

    <LinearLayout
        android:id="@+id/commonLeftBtn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="backTo"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_size_common"
            android:src="@mipmap/icon_fh"
            android:clickable="false" />
    </LinearLayout>

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:maxEms="10"
        android:id="@+id/commonTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="首页"
        android:textColor="@color/title_text"
        android:textSize="@dimen/title_bar_text_size"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/commonRightBtn"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_ditu"
            android:visibility="gone"
            android:textColor="#fff"
            android:layout_marginRight="@dimen/margin_size_common"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="地图"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/commonRightImage"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_marginRight="@dimen/margin_size_common"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_xl"
            android:visibility="gone"
            android:clickable="false" />

        <TextView
            android:id="@+id/commonRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:text="保存(9/9)"
            android:layout_marginRight="15dp"
            android:background="@drawable/corner_toumingbg_greenborder_2dp"
            android:textSize="14dp"
            android:clickable="false" />
    </RelativeLayout>

</RelativeLayout>