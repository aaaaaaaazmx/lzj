<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"></include>


    <LinearLayout
        android:padding="10dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fl"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="法律"
            android:drawableTop="@mipmap/icon_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_xzfg"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="行政法规"
            android:drawableTop="@mipmap/icon_xzfg"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dffg"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="地方法规"
            android:drawableTop="@mipmap/icon_dffg"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />

    <LinearLayout
        android:padding="10dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_gfbz"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="规范/标准"
            android:drawableTop="@mipmap/icon_gf"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_gfwj"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="规范性文件"
            android:drawableTop="@mipmap/icon_gfwj"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_qita"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="其他"
            android:drawableTop="@mipmap/xingzhuang"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />

    <com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity
        android:id="@+id/type_page_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.lcsrq.view.PullToRefreshView
            android:id="@+id/pullToRefreshView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_law"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"></ListView>
        </com.example.lcsrq.view.PullToRefreshView>
    </com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity>



</LinearLayout>
