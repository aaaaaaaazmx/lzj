<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/dzg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111111111111111111" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="11111111111111"
            android:textColor="#666666"
            android:layout_below="@+id/dzg_tv"
            android:id="@+id/tv_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="11111111111111"
            android:textColor="#666666"
            android:layout_below="@+id/tv_creat"
            android:id="@+id/tv_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:padding="2dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dzg_tv"
            android:textColor="#fff"
            android:id="@+id/btn_cg"
            android:layout_centerInParent="true"
            android:background="@drawable/button_gyz_detail"
            android:text="已查改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_danwei"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cg"
           >

            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_3"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
