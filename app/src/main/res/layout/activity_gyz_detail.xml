<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:id="@+id/ll_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_title"></include>

    <ScrollView
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpagerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v4.view.ViewPager>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_text_style">

                        <TextView
                            android:id="@+id/tv_pager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/vv_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"></com.viewpagerindicator.CirclePageIndicator>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="15dp">

                <TextView
                    android:textColor="#a000"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="累计记分：209"
                    android:textColor="#EF3131" />

            </RelativeLayout>

            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView

                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#6A6A6A"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/icon_dw" />

                        <TextView
                            android:layout_marginLeft="26dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxEms="20"
                            android:textColor="#9D9D9D"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_dhhm" />

                        <TextView
                            android:id="@+id/tv_gs_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#9D9D9D"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="18dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_dh" />

            </RelativeLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#F2F2F2" />-->

            <com.example.lcsrq.view.ExpandableListViewDY
                android:id="@+id/gsfzr_list"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F2F2F2" />-->
            <com.example.lcsrq.view.ExpandableListViewDY
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:id="@+id/fzr_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F2F2F2" />-->
            <com.example.lcsrq.view.ExpandableListViewDY
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:id="@+id/cyr_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F2F2F2" />-->

            <com.example.lcsrq.view.ExpandableListViewDY
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:id="@+id/jc_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F2F2F2" />-->

            <com.example.lcsrq.view.ExpandableListViewDY
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:id="@+id/dzg_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#F2F2F2" />-->


            <com.example.lcsrq.view.ExpandableListViewDY
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:childDivider="@null"
                android:id="@+id/lskf_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:listSelector="@android:color/transparent"></com.example.lcsrq.view.ExpandableListViewDY>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F2F2F2" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_y" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="开始检查" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weihu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_xxwf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="信息维护" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
